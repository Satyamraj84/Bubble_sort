#include<iostream>
using namespace std;

int main(int argc, char const *argv[])
{
    int A[30], Size;
    cout << "Enter the Size of Array: " << endl;
    cin >> Size;
    cout << "Enter the Elements : " << endl;
    for (int i = 0; i < Size; i++)
    {
        cin >> A[i];
    }

    cout << "Before Bubble Sort : " << endl;
    Print_Array(A, Size);
    Bubble_Sort(A, Size);
    cout << endl
         << "After Bubble Sorting : " << endl;
    Print_Array(A, Size);
    return 0;
}
[9:46 pm, 03/10/2022] Satyam Vickey: void Bubble_Sort(int Arr[], int Size)
{
    int Counter = 1, temp;
    while (Counter < Size)
    {
        for (int j = 0; j < Size; j++)
        {
            if (Arr[j] > Arr[j + 1])
            {
                temp = Arr[j];
                Arr[j] = Arr[j + 1];
                Arr[j + 1] = temp;
            } 
        }
        Counter++;
    }
}
 void Print_Array(int Arr[], int Size)
{
    for (int i = 0; i < Size; i++)
    {
        cout << Arr[i] << "\t";
    }
}
